@if (Request.IsAuthenticated)
{
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="glyphicon glyphicon-user">
    </i> @User.Identity.Name <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @if (User.IsInRole("Administrator"))
        {            
            <li><a href="@Url.Action("Index", "AdministrativeTool")" style="color:lightcoral"><i class="glyphicon glyphicon-wrench"></i> <b>Settings</b></a></li>
            <li class="divider"></li>            
        }
        <li><a href="@Url.Action("LogOff", "Account")"><i class="glyphicon glyphicon-off"></i> Log Out</a></li>
    </ul>    
}
else
{    
    <a class="btn dropdown-toggle" href="@Url.Action("LogOn", "Account")"><i class="glyphicon glyphicon-log-in"></i> Log In</a>
}